<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".view.activity.MainActivity">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_175sdp"
                app:cardCornerRadius="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_minus20sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/ic_header_wave">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize"
                        android:layout_marginTop="@dimen/_20sdp">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/shapeableImageViewProfil"
                            android:layout_width="@dimen/_28sdp"
                            android:layout_height="@dimen/_28sdp"
                            android:layout_marginLeft="@dimen/_13sdp"
                            android:layout_gravity="center_vertical|left"
                            android:scaleType="centerCrop"
                            app:shapeAppearance="@style/ShapeAppearance.App.CircleImageView"
                            android:src="@drawable/no_image"/>

<!--                        <ImageView-->
<!--                            android:layout_width="@dimen/_28sdp"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:layout_marginRight="@dimen/_13sdp"-->
<!--                            android:layout_gravity="center_vertical|right"-->
<!--                            android:adjustViewBounds="true"-->
<!--                            android:src="@drawable/ic_outline_notifications"/>-->

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/_20sdp"
                        android:paddingRight="@dimen/_20sdp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Halo,"
                                android:textSize="@dimen/_18sdp"
                                android:fontFamily="@font/open_sans_light"
                                android:textColor="@android:color/white"/>

                            <TextView
                                android:id="@+id/textViewNama"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:capitalize="words"
                                android:inputType="textCapWords"
                                android:textSize="@dimen/_18sdp"
                                android:fontFamily="@font/open_sans_regular"
                                android:textColor="@android:color/white"/>

                        </LinearLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_student_main"
                            android:layout_gravity="bottom|right"/>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_minus30sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_13sdp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_folder"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/open_sans_light"
                                    android:gravity="left|center_vertical"
                                    android:text="Aturan"
                                    android:textSize="@dimen/_10sdp"
                                    android:textColor="@android:color/black" />

                                <TextView
                                    android:id="@+id/textViewAturan"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/open_sans_bold"
                                    android:gravity="right|center_vertical"
                                    android:text="-"
                                    android:textSize="@dimen/_10sdp"
                                    android:textColor="@android:color/black" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/open_sans_light"
                                    android:gravity="left|center_vertical"
                                    android:text="Status Validasi"
                                    android:textSize="@dimen/_10sdp"
                                    android:textColor="@android:color/black" />

                                <TextView
                                    android:id="@+id/textViewStatusValidasi"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/open_sans_bold"
                                    android:gravity="right|center_vertical"
                                    android:text="-"
                                    android:textSize="@dimen/_10sdp"
                                    android:textColor="@android:color/black" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/open_sans_light"
                                    android:gravity="left|center_vertical"
                                    android:text="Tangal Validasi"
                                    android:textSize="@dimen/_10sdp"
                                    android:textColor="@android:color/black" />

                                <TextView
                                    android:id="@+id/textViewTanggalValidasi"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/open_sans_bold"
                                    android:gravity="right|center_vertical"
                                    android:text="-"
                                    android:textSize="@dimen/_10sdp"
                                    android:textColor="@android:color/black" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/_13sdp"
                        android:layout_marginRight="@dimen/_13sdp"
                        android:background="@color/background"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/materialCardViewCatat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:cardElevation="0dp"
                            app:cardCornerRadius="0dp"
                            android:clickable="true"
                            android:focusable="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="16dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:layout_marginBottom="8dp"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/ic_add_post" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Catat"
                                    android:gravity="center"
                                    android:textSize="@dimen/_10sdp"
                                    android:fontFamily="@font/open_sans_light"
                                    android:textColor="@android:color/black"/>

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:background="@android:color/darker_gray"/>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/materialCardViewKegiatan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:cardElevation="0dp"
                            app:cardCornerRadius="0dp"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="16dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:layout_marginBottom="8dp"
                                    android:src="@drawable/ic_event_list"
                                    android:adjustViewBounds="true"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/open_sans_light"
                                    android:text="Kegiatan"
                                    android:gravity="center"
                                    android:textSize="@dimen/_10sdp"
                                    android:textColor="@android:color/black" />

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:background="@android:color/darker_gray"/>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/materialCardViewInformasi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:cardElevation="0dp"
                            app:cardCornerRadius="0dp"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="16dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:layout_marginBottom="8dp"
                                    android:src="@drawable/ic_info"
                                    android:adjustViewBounds="true"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Informasi"
                                    android:gravity="center"
                                    android:textSize="@dimen/_10sdp"
                                    android:fontFamily="@font/open_sans_light"
                                    android:textColor="@android:color/black"/>

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_13sdp"
                android:paddingBottom="@dimen/_13sdp"
                android:overScrollMode="never">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_20sdp"
                    android:paddingRight="@dimen/_20sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_bold"
                        android:text="Rekap Penilaian"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@android:color/black" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_13sdp"
                        app:cardCornerRadius="@dimen/_20sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_13sdp"
                                android:layout_marginRight="@dimen/_13sdp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="wrap_content"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/ic_coin"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_8sdp"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/open_sans_light"
                                            android:gravity="left|center_vertical"
                                            android:text="Poin Kamu"
                                            android:textSize="@dimen/_10sdp"
                                            android:textColor="@android:color/black" />

                                        <TextView
                                            android:id="@+id/textViewTotalPoin"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/open_sans_bold"
                                            android:gravity="right|center_vertical"
                                            android:text="0 Poin"
                                            android:textSize="@dimen/_10sdp"
                                            android:textColor="@android:color/black" />

                                    </LinearLayout>

                                    <com.google.android.material.progressindicator.LinearProgressIndicator
                                        android:id="@+id/linearProgressIndicatorPoin"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_8sdp"
                                        android:scaleY="2"
                                        android:progress="0"
                                        app:indicatorColor="@color/primary"
                                        app:trackColor="@color/background" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="@dimen/_75sdp"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_13sdp"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:background="@color/primary">

                                <TextView
                                    android:id="@+id/textViewNilai"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="E"
                                    android:textSize="@dimen/_30sdp"
                                    android:fontFamily="@font/open_sans_bold"
                                    android:textColor="@color/white"/>

                            </LinearLayout>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/materialCardViewRiwayat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_13sdp"
                        android:clickable="true"
                        app:cardCornerRadius="@dimen/_20sdp"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_80sdp"
                                android:layout_marginLeft="@dimen/_13sdp"
                                android:layout_marginBottom="@dimen/_minus13sdp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_student_post"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginLeft="@dimen/_13sdp"
                                android:fontFamily="@font/open_sans_light"
                                android:gravity="left|center_vertical"
                                android:text="Cek riwayat keikutsertaan kegiatan ilmiah kamu di sini"
                                android:textSize="@dimen/_10sdp"
                                android:textColor="@android:color/black" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_13sdp"
                                android:layout_marginRight="@dimen/_13sdp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_round_arrow_forward"/>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.button.MaterialButton
                        android:visibility="gone"
                        android:id="@+id/materialButtonAjukanValidasi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_13sdp"
                        android:padding="@dimen/_13sdp"
                        app:cornerRadius="@dimen/_20sdp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/open_sans_bold"
                        android:textAllCaps="false"
                        android:text="Ajukan Validasi"/>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </LinearLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>